@model LibraryManagement.Models.Book
@{
    ViewData["Title"] = "Book Details";
}
<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Book Details</h2>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label"><strong>Title:</strong></label>
                <p class="mb-0">@Model.Title</p>
            </div>
            <div class="mb-3">
                <label class="form-label"><strong>Author:</strong></label>
                <p class="mb-0">@Model.Author</p>
            </div>
            <div class="mb-3">
                <label class="form-label"><strong>Genre:</strong></label>
                <p class="mb-0">@Model.Genre</p>
            </div>
            <div class="mb-3">
                <label class="form-label"><strong>Description:</strong></label>
                <p class="mb-0">@Model.Description</p>
            </div>
            <div class="mb-3">
                <label class="form-label"><strong>Available:</strong></label>
                <p class="mb-0">@((Model.IsAvailable ? "Yes" : "No"))</p>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
