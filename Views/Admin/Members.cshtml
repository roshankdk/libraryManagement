@model IEnumerable<LibraryManagement.Models.ApplicationUser>
@{
    ViewData["Title"] = "Members";
}

<style>
    .members-table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .actions-dropdown {
        width: 150px;
        display: inline-block;
    }

    .btn-action {
        margin: 2px;
        font-size: 0.85rem;
        padding: 0.375rem 0.75rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.03);
    }

    .status-badge {
        font-size: 0.8rem;
        padding: 0.25rem 0.5rem;
        border-radius: 10px;
    }

    .badge-member {
        background-color: #6c757d;
    }

    .badge-librarian {
        background-color: #17a2b8;
    }

    .badge-admin {
        background-color: #28a745;
    }
</style>

<h2 class="mb-4">Members</h2>
<div class="table-responsive">
    <table class="table table-hover members-table">
        <thead class="thead-dark">
            <tr>
                <th>Email</th>
                <th>Current Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.Email</td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <span class="badge badge-admin status-badge">Admin</span>
                        }
                        else if (User.IsInRole("Librarian"))
                        {
                            <span class="badge badge-librarian status-badge">Librarian</span>
                        }
                        else
                        {
                            <span class="badge badge-member status-badge">Member</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex flex-wrap gap-2">
                            <form asp-action="AssignRole" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@member.Id" />
                                <select name="role" class="form-control actions-dropdown">
                                    <option value="Member">Member</option>
                                    <option value="Librarian">Librarian</option>
                                    <option value="Admin">Admin</option>
                                </select>
                                <button type="submit" class="btn btn-primary btn-action">
                                    <i class="fas fa-user-plus"></i> Assign
                                </button>
                            </form>

                            <form asp-action="RemoveRole" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@member.Id" />
                                <select name="role" class="form-control actions-dropdown">
                                    <option value="Member">Member</option>
                                    <option value="Librarian">Librarian</option>
                                    <option value="Admin">Admin</option>
                                </select>
                                <button type="submit" class="btn btn-warning btn-action">
                                    <i class="fas fa-user-minus"></i> Remove
                                </button>
                            </form>

                            <form asp-action="DeleteUser" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@member.Id" />
                                <button type="submit" class="btn btn-danger btn-action">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">