@model IEnumerable<LibraryManagement.Models.ApplicationUser>
@{
    ViewData["Title"] = "Members";
}
<h2>Members</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var member in Model)
    {
        <tr>
            <td>@member.Email</td>
            <td>
                <form asp-action="AssignRole" method="post" class="d-inline">
                    <input type="hidden" name="userId" value="@member.Id" />
                    <select name="role" class="form-control d-inline w-auto">
                        <option value="Member">Member</option>
                        <option value="Librarian">Librarian</option>
                        <option value="Admin">Admin</option>
                    </select>
                    <button type="submit" class="btn btn-primary btn-sm">Assign</button>
                </form>
                <form asp-action="RemoveRole" method="post" class="d-inline">
                    <input type="hidden" name="userId" value="@member.Id" />
                    <select name="role" class="form-control d-inline w-auto">
                        <option value="Member">Member</option>
                        <option value="Librarian">Librarian</option>
                        <option value="Admin">Admin</option>
                    </select>
                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
