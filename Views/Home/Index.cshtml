@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - Library Management System</title>
  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-9ndCyUa6wW/A2e6X4z4vt6Cv9yA64H/8H9T7tZZ3KyD5jTKn2Wv2b1sJ7zB7b/+X" crossorigin="anonymous">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
        integrity="sha512-pap3L7uE5+o3YcRjl1eG6ykqFwL2QXQ8wB8vTnjz1+tcH9SWX1Ey3qQn+U5AXT9k5KXn3YtG1Z3fH0T0AqDZBw==" 
        crossorigin="anonymous" referrerpolicy="no-referrer" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #2c3e50;
      --secondary: #3498db;
      --accent: #e74c3c;
      --light: #ecf0f1;
      --dark: #2c3e50;
    }
    body {
      font-family: 'Roboto', sans-serif;
      line-height: 1.6;
      color: #333;
      background-color: var(--light);
      margin: 0;
      padding: 0;
    }
    /* Navigation & Dropdown (if needed) */
    .btn-link.nav-link {
      color: rgba(255, 255, 255, 0.85) !important;
      text-decoration: none;
      cursor: pointer;
    }
    .btn-link.nav-link:hover {
      color: #fff !important;
      background-color: rgba(255, 255, 255, 0.1);
    }
    .dropdown-menu {
      background-color: #34495e;
      border: none;
      border-radius: 4px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      margin-top: 10px;
    }
    .dropdown-item {
      color: rgba(255, 255, 255, 0.85);
      padding: 0.5rem 1.5rem;
      transition: background-color 0.2s ease, color 0.2s ease;
    }
    .dropdown-item:hover,
    .dropdown-item:focus {
      color: #fff;
      background-color: var(--secondary);
    }
    /* Hero Section */
    .hero {
      background: linear-gradient(rgba(44, 62, 80, 0.7), rgba(44, 62, 80, 0.7)), 
                  url('/api/placeholder/1200/600') center/cover no-repeat;
      color: #fff;
      text-align: center;
      padding: 4rem 0;
      margin-bottom: 2rem;
    }
    .hero h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    .hero p {
      font-size: 1.25rem;
      max-width: 700px;
      margin: 0 auto 2rem;
    }
    .btn {
      padding: 0.75rem 1.5rem;
      border-radius: 4px;
      font-weight: 500;
      transition: background-color 0.3s ease;
    }
    .btn-primary {
      background-color: var(--secondary);
      border: none;
    }
    .btn-primary:hover {
      background-color: #2980b9;
    }
    .btn-secondary {
      background-color: transparent;
      border: 2px solid #fff;
      margin-left: 1rem;
    }
    .btn-secondary:hover {
      background-color: rgba(255, 255, 255, 0.1);
    }
    /* Features Section */
    .features {
      padding: 3rem 0;
    }
    .feature-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }
    .feature-card {
      background: #fff;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }
    .feature-card:hover {
      transform: translateY(-5px);
    }
    .feature-icon {
      background-color: var(--secondary);
      color: #fff;
      font-size: 2rem;
      padding: 1.5rem;
      text-align: center;
    }
    .feature-content {
      padding: 1.5rem;
    }
    .feature-title {
      font-size: 1.25rem;
      margin-bottom: 1rem;
      color: var(--dark);
    }
    /* Get Started Section */
    .get-started {
      background-color: var(--primary);
      color: #fff;
      text-align: center;
      padding: 3rem 0;
    }
    .get-started h2 {
      margin-bottom: 2rem;
    }
    /* Footer */
    .footer {
      background-color: var(--dark);
      color: #fff;
      padding: 2rem 0;
      text-align: center;
      margin-top: 2rem;
    }
    .footer a {
      color: var(--secondary);
      text-decoration: none;
    }
    /* Responsive adjustments */
    @@media (max-width: 768px) {
      .hero h1 {
        font-size: 2.5rem;
      }
      .hero p {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
  <header>
    <!-- Optional: Add a minimalist navigation bar here if needed -->
  </header>
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <h1>Modern Library Management Solution</h1>
        <p>Streamline your library operations with our comprehensive management system. Efficiently manage books, patrons, loans, and more with our user-friendly interface.</p>
        <div>
          <a href="/Account/Register" class="btn btn-primary">Get Started</a>
          <a href="/Home/Demo" class="btn btn-secondary">View Demo</a>
        </div>
      </div>
    </section>
    <!-- Features Section -->
    <section class="features">
      <div class="container">
        <div class="feature-grid">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-search"></i>
            </div>
            <div class="feature-content">
              <h3 class="feature-title">Advanced Catalog Search</h3>
              <p>Find books by title, author, genre, ISBN, and more with intelligent filters for quick results.</p>
            </div>
          </div>
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-users"></i>
            </div>
            <div class="feature-content">
              <h3 class="feature-title">Member Management</h3>
              <p>Maintain detailed patron profiles and borrowing histories to keep your library organized.</p>
            </div>
          </div>
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-exchange-alt"></i>
            </div>
            <div class="feature-content">
              <h3 class="feature-title">Loan Tracking</h3>
              <p>Simplify check-outs and returns with automated due dates and reservation management.</p>
            </div>
          </div>
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-chart-bar"></i>
            </div>
            <div class="feature-content">
              <h3 class="feature-title">Reports & Analytics</h3>
              <p>Generate insightful reports on circulation, popular titles, overdue items, and more.</p>
            </div>
          </div>
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-bell"></i>
            </div>
            <div class="feature-content">
              <h3 class="feature-title">Notifications</h3>
              <p>Stay updated with automated email and SMS alerts for due dates and library events.</p>
            </div>
          </div>
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-mobile-alt"></i>
            </div>
            <div class="feature-content">
              <h3 class="feature-title">Mobile Friendly</h3>
              <p>Access your system on any device with a fully responsive design that adapts seamlessly.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Get Started Section -->
    <section class="get-started">
      <div class="container">
        <h2>Ready to transform your library?</h2>
        <a href="/Home/Contact" class="btn btn-primary">Contact Us Today</a>
      </div>
    </section>
  </main>
  <footer class="footer">
    <div class="container">
      <p>&copy; @DateTime.Now.Year - Library Management System. All rights reserved.</p>
      <p>Powered by <a href="https://learn.microsoft.com/aspnet/core">ASP.NET Core</a></p>
    </div>
  </footer>
  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" 
          integrity="sha384-ENjdO4Dr2bkBIFxQpeo5s6UYz5G6Zr9E2F0j9WR38S5M9MZ8T7Q4Dz9PIh7r7mt+" crossorigin="anonymous"></script>
</body>
</html>
